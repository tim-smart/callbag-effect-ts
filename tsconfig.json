{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["ESNext"],
    "target": "ES2021",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "module": "CommonJS",
    "paths": {
      "callbag-effect-ts/*": ["./src/*"]
    }
  },

  "include": ["src/**/*"],

  "ts-node": {
    "files": true
  }
}
